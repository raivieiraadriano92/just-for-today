{
  "expo": {
    "name": "Just for Today",
    "slug": "just-for-today",
    "version": "1.1.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "justfortoday",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "appStoreUrl": "https://apps.apple.com/us/app/just-for-today-daily-journal/id6747355776",
      "supportsTablet": false,
      "bundleIdentifier": "app.justfortoday",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleAllowMixedLocalizations": true
      },
      "appleTeamId": "2W3CZ62JW3",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.app.justfortoday.intention.widget"
        ]
      }
    },
    "locales": {
      "en": "./i18n/locales/en/metadata.json",
      "es": "./i18n/locales/es/metadata.json",
      "pt": "./i18n/locales/pt/metadata.json"
    },
    "android": {
      "playStoreUrl": "https://play.google.com/store/apps/details?id=app.justfortoday",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ECEFF2"
      },
      "edgeToEdgeEnabled": true,
      "package": "app.justfortoday"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ECEFF2",
          "dark": {
            "backgroundColor": "#0F252E"
          }
        }
      ],
      "expo-localization",
      "expo-sqlite",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "just-for-today",
          "organization": "monsters-sa"
        }
      ],
      "expo-web-browser",
      "@bacons/apple-targets"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c7174a47-2fd3-4b30-8219-280c6fcc8f8e"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/c7174a47-2fd3-4b30-8219-280c6fcc8f8e"
    }
  }
}
