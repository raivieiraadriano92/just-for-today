<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Open Quote - Top Left -->
    <TextView
        android:id="@+id/open_quote"
        android:text="“"
        android:textSize="96sp"
        android:textColor="#1A000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Close Quote - Bottom Right -->
    <TextView
        android:id="@+id/close_quote"
        android:text="”"
        android:textSize="96sp"
        android:textColor="#1A000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="48dp" />

    <!-- Intention View Content -->
    <LinearLayout
        android:id="@+id/intention_view"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/intention_label"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/intention_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/empty_view"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/greeting"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/message"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/cta"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_pill"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
